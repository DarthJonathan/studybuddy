<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#e6ffe6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical"
        android:elevation="8dp"
        android:layout_weight="0.6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="12pt"
            android:id="@+id/questionNumber"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:id="@+id/question"
                android:textSize="8pt"
                android:layout_marginTop="-60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLABLABLABLABLABLABLA"/>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_weight="0.2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:elevation="8dp"
            android:id="@+id/ans1btn"
            android:layout_marginRight="12dp"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ansOne"
                android:text="Marker"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:id="@+id/ans2btn"
            android:elevation="8dp"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/asTwo"
                android:text="Logic"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_weight="0.2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:elevation="8dp"
            android:id="@+id/ans3btn"
            android:layout_marginRight="12dp"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ansThree"
                android:text="Casual"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:elevation="8dp"
            android:id="@+id/ans4btn"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ansFour"
                android:text="Imperial"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>